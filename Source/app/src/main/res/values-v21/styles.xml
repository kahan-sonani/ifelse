<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="myTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorSecondary">@color/colorYellow</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorBlack</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_white</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
    </style>

    <style name="toolbar_title_style">
        <item name="android:textSize">@dimen/dp24</item>
        <item name="android:fontFamily">@font/hind_bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="workflow_title_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/hind_bold</item>
        <item name="android:textSize">@dimen/dp22</item>
    </style>

    <style name="workflow_status_style" parent="workflow_title_style">
        <item name="android:textSize">@dimen/dp12</item>
    </style>

    <style name="workflow_icons_style">
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:alpha">1.0</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="editText_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorBlack</item>
        <item name="hintTextColor">@color/colorBlack</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="black_button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorDarkGray</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/hind_semibold</item>
    </style>

    <style name="bi_workflow_details_style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/hind_light</item>
        <item name="android:textSize">@dimen/dp12</item>
    </style>

    <style name="workflow_color_1_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/workflow_color1</item>
        <item name="colorSecondary">@color/colorYellow</item>
    </style>

    <style name="workflow_color_2_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/workflow_color2</item>
        <item name="colorSecondary">@color/colorYellow</item>
    </style>

    <style name="workflow_color_3_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/workflow_color3</item>
        <item name="colorSecondary">@color/colorYellow</item>
    </style>

    <style name="workflow_color_4_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/workflow_color4</item>
        <item name="colorSecondary">@color/colorYellow</item>
    </style>

    <style name="workflow_color_5_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/workflow_color5</item>
        <item name="colorSecondary">@color/colorYellow</item>
    </style>

    <style name="workflow_color_6_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/workflow_color6</item>
        <item name="colorSecondary">@color/colorYellow</item>
    </style>

    <style name="workflow_color_7_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/workflow_color7</item>
        <item name="colorSecondary">@color/colorYellow</item>
    </style>

    <style name="workflow_color_8_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/workflow_color8</item>
        <item name="colorSecondary">@color/colorYellow</item>
    </style>

    <style name="workflow_color_9_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/workflow_color9</item>
        <item name="colorSecondary">@color/colorYellow</item>
    </style>

    <style name="workflow_color_10_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/workflow_color10</item>
        <item name="colorSecondary">@color/colorYellow</item>
    </style>

    <style name="workflow_color_11_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorSecondary">@color/colorYellow</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorBlack</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="viewClickStyleNoBorder" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="viewClickStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:focusable">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="SplashPreview" parent="myTheme">
        <item name="android:windowBackground">@drawable/startup_logo</item>
    </style>

    <style name="cook_workflow_tabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIconTint">@color/colorGray</item>
        <item name="tabIndicatorColor">@color/colorBlack</item>
        <item name="tabRippleColor">@color/colorGray</item>
    </style>

    <style name="myBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearance">@drawable/color_drawable</item>
        <item name="behavior_peekHeight">@dimen/bottomSheetCollapsedHeight</item>
        <item name="behavior_hideable">false</item>
    </style>
</resources>
